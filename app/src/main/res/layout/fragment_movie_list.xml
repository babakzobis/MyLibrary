<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="hasMovies"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        tools:context=".ui.movie.MovieListFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_movie_list_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/card_side_margin"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="2"
            app:isGone="@{!hasMovies}"
            tools:listitem="@layout/list_item_movie" />

        <!--    TODO: replace with an more elaborate view explaining the failure-->
        <ImageView
            android:id="@+id/fragment_movie_list_empty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/fragment_movie_list_empty"
            android:scaleType="fitXY"
            android:src="@drawable/bg_list_empty"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:isGone="@{hasMovies}"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>