<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_movies"
    app:startDestination="@id/fragment_movie_list">
    <fragment
        android:id="@+id/fragment_movie_list"
        android:name="com.vanzoconsulting.mylibrary.ui.movie.MovieListFragment"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_fragment_movie_list_to_fragment_movie_details"
            app:destination="@id/fragment_movie_details"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/fragment_movie_details"
        android:name="com.vanzoconsulting.mylibrary.ui.movie.MovieDetailsFragment"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="movie"
            app:argType="com.vanzoconsulting.mylibrary.domain.entity.Movie" />
    </fragment>
</navigation>